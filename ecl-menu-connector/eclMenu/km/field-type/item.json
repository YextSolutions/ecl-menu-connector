{
  "$id": "eclMenu_item",
  "$schema": "https://schema.yext.com/config/km/field-type/v1",
  "description": "",
  "displayName": "Menu Item",
  "type": {
    "structType": {
      "property": [
        {
          "name": "itemName",
          "displayName": "Item Name",
          "isRequired": false,
          "typeId": "list",
          "type": {
            "listType": {
              "typeId": "string",
              "maxLength": 5000,
              "type": {
                "stringType": {
                  "maxLength": 100000,
                  "stereotype": "SIMPLE"
                }
              }
            }
          }
        },
        {
          "name": "itemID",
          "displayName": "Item ID",
          "isRequired": false,
          "typeId": "string",
          "type": {
            "stringType": {
              "stereotype": "SIMPLE",
              "maxLength": 100000
            }
          }
        },
        {
          "name": "itemPrice",
          "displayName": "Item Price (Value)",
          "isRequired": false,
          "typeId": "string",
          "type": {
            "stringType": {
              "stereotype": "SIMPLE",
              "maxLength": 100000
            }
          }
        },
        {
          "name": "itemDescription",
          "displayName": "Item Description",
          "isRequired": false,
          "typeId": "richText",
          "type": {
            "richTextType": {
              "maxLength": 100000,
              "supportedFormat": [
                "BLOCK_QUOTE",
                "BOLD",
                "BULLETED_LIST",
                "CODE_BLOCK",
                "CODE_SPAN",
                "HEADINGS",
                "HORIZONTAL_LINE",
                "HYPERLINK",
                "IMAGE",
                "ITALICS",
                "NUMBERED_LIST",
                "STRIKETHROUGH",
                "SUBSCRIPT",
                "SUPERSCRIPT",
                "UNDERLINE"
              ]
            }
          }
        },
        {
          "name": "itemPhoto",
          "displayName": "Item Photo",
          "isRequired": false,
          "typeId": "image",
          "type": {
            "imageType": {
              "isSimpleImage": true,
              "unconstrainedAspectRatioAllowed": true
            }
          }
        }
      ]
    }
  }
}